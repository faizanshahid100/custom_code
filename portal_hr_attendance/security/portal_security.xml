<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Portal attendance record rules -->
    <record id="attendance_portal_rule" model="ir.rule">
        <field name="name">Portal: Own Attendance Only</field>
        <field name="model_id" ref="hr_attendance.model_hr_attendance"/>
        <field name="domain_force">[('employee_id.user_id', '=', user.id)]</field>
        <field name="groups" eval="[(4, ref('base.group_portal'))]"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_create" eval="True"/>
        <field name="perm_unlink" eval="False"/>
    </record>

    <!-- Portal employee record rules -->
    <record id="employee_portal_rule" model="ir.rule">
        <field name="name">Portal: Own Employee Record Only</field>
        <field name="model_id" ref="hr.model_hr_employee"/>
        <field name="domain_force">[('user_id', '=', user.id), ('has_portal_access', '=', True)]</field>
        <field name="groups" eval="[(4, ref('base.group_portal'))]"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="False"/>
        <field name="perm_create" eval="False"/>
        <field name="perm_unlink" eval="False"/>
    </record>

    <!-- Portal attendance group -->
    <record id="group_portal_attendance" model="res.groups">
        <field name="name">Portal Attendance Users</field>
        <field name="category_id" ref="base.module_category_human_resources"/>
        <field name="comment">Portal users with attendance access</field>
        <field name="implied_ids" eval="[(4, ref('base.group_portal'))]"/>
    </record>

</odoo>