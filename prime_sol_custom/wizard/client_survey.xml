<odoo>
    <record id="view_client_survey_wizard_form" model="ir.ui.view">
        <field name="name">client.survey.wizard.form</field>
        <field name="model">client.survey</field>
        <field name="arch" type="xml">
            <form string="Client Survey">
                <group>
                    <group>
                        <field name="date_from"/>
                        <field name="partner_id"/>
                    </group>
                    <group>
                        <field name="date_to"/>
                    </group>
                </group>
                <footer>
                    <button string="Create Report" type="object" name="action_create_report" class="btn-primary"/>
                    <button string="Print Excel" type="object" name="action_confirm" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_client_survey_wizard" model="ir.actions.act_window">
        <field name="name">Client Survey</field>
        <field name="res_model">client.survey</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <!--    Menu in Employee -> Reporting -> Score Card-->
    <menuitem
            id="client_survey_menu_id"
            parent="hr.hr_menu_hr_reports"
            name="Client Survey"
            action="action_client_survey_wizard"
            sequence="620"/>
</odoo>
