<odoo>
    <record id="view_score_card_tree" model="ir.ui.view">
        <field name="name">score.card.tree</field>
        <field name="model">score.card</field>
        <field name="arch" type="xml">
            <tree string="Score Card">
                <field name="employee_id" widget="percentage"/>
                <field name="partner_id" widget="percentage"/>
                <field name="survey" widget="percentage"/>
                <field name="kpi" widget="percentage"/>
                <field name="weekly_meeting" widget="percentage"/>
                <field name="daily_attendance" widget="percentage"/>
                <field name="office_coming" widget="percentage"/>
            </tree>
        </field>
    </record>
</odoo>
