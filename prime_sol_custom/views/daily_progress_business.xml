<odoo>
    <record id="view_daily_progress_business_form" model="ir.ui.view">
        <field name="name">daily.progress.business.form</field>
        <field name="model">daily.progress.business</field>
        <field name="arch" type="xml">
            <form string="Daily Progress Business" create="true" edit="true">
                <sheet>
                    <group>
                        <group>
                            <field name="resource_user_id" required="1"/>
                            <field name="date_of_project" required="1"/>
                            <field name="finance_area" required="1"/>
                        </group>
                        <group>
                            <field name="week_of_year" readonly="1"/>
                            <field name="year_of_kpi" readonly="1"/>
                        </group>
                    </group>

                    <notebook>
                        <!-- Financial Planning & Analysis -->
                        <page string="Financial Planning &amp; Analysis"
                              attrs="{'invisible': [('finance_area', '!=', 'fpna')]}">
                            <group>
                                <field name="project"/>
                                <field name="is_deadline_met"/>
                                <field name="is_week_meeting"/>
                                <field name="comments"/>
                                <field name="manager_comment"/>
                            </group>
                        </page>

                        <!-- Accounts Payable -->
                        <page string="Accounts Payable" attrs="{'invisible': [('finance_area', '!=', 'ap')]}">
                            <group>
                                <field name="invoice_count"/>
                                <field name="pending_approval_count"/>
                                <field name="closed_ticket_count"/>
                            </group>
                        </page>

                        <!-- Accounts Receivable -->
                        <page string="Accounts Receivable" attrs="{'invisible': [('finance_area', '!=', 'ar')]}">
                            <group>
                                <field name="invoice_count"/>
                                <field name="number_of_calls"/>
                                <field name="bad_debt"/>
                                <field name="recovery_of_bad_debt"/>
                            </group>
                        </page>

                        <!-- Senior Accountant -->
                        <page string="Senior Accountant" attrs="{'invisible': [('finance_area', '!=', 'sa')]}">
                            <group string="Senior Accountant Tasks">
                                <!-- =============================== -->
                                <!-- Senior Accountant Tasks Table -->
                                <!-- =============================== -->
<!--                                <separator string="Senior Accountant Tasks" colspan="4"/>-->
                                <div style="overflow-x: auto; margin-bottom: 20px; width: 200%;">
                                    <table class="o_group o_inner_group"
                                           style="width:100%; border-collapse:collapse; text-align:center; font-size:13px;">
                                        <thead style="background-color:#f6f6f6;">
                                            <tr>
                                                <th style="border:1px solid #ddd; padding:6px; text-align:left; width:40%;">
                                                    Task
                                                </th>
                                                <th style="border:1px solid #ddd; padding:6px; width:30%;">Deadline</th>
                                                <th style="border:1px solid #ddd; padding:6px; width:30%;">Deadline
                                                    Met?
                                                </th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr>
                                                <td style="text-align:left;">Accrued Expenses</td>
                                                <td>3rd Business Day</td>
                                                <td style="text-align:center;">
                                                    <field name="is_accrued_expenses" widget="boolean_toggle"/>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td style="text-align:left;">Decommissioning</td>
                                                <td>-2 Business Day</td>
                                                <td style="text-align:center;">
                                                    <field name="is_decommissioning" widget="boolean_toggle"/>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td style="text-align:left;">Leases</td>
                                                <td>1st Business Day</td>
                                                <td style="text-align:center;">
                                                    <field name="is_leases" widget="boolean_toggle"/>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td style="text-align:left;">Other Current Assets</td>
                                                <td>3rd Business Day</td>
                                                <td style="text-align:center;">
                                                    <field name="is_other_current_assets" widget="boolean_toggle"/>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td style="text-align:left;">Prepaid Expenses</td>
                                                <td>3rd Business Day</td>
                                                <td style="text-align:center;">
                                                    <field name="is_prepaid_expenses" widget="boolean_toggle"/>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td style="text-align:left;">Third Party Borrowing</td>
                                                <td>2nd Business Day</td>
                                                <td style="text-align:center;">
                                                    <field name="is_third_party_borrowing" widget="boolean_toggle"/>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td style="text-align:left;">ARO</td>
                                                <td>-1 Business Day</td>
                                                <td style="text-align:center;">
                                                    <field name="is_aro" widget="boolean_toggle"/>
                                                </td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>

                            </group>

                            <group string="Asset Schedules">

                                <!-- =============================== -->
                                <!-- Asset Schedules Table -->
                                <!-- =============================== -->
<!--                                <separator string="Asset Schedules" colspan="4"/>-->
                                <div style="overflow-x: auto; width: 200%;">
                                    <table class="o_group o_inner_group"
                                           style="width:100%; border-collapse:collapse; text-align:center; font-size:13px;">
                                        <thead style="background-color:#f6f6f6;">
                                            <tr>
                                                <th style="border:1px solid #ddd; padding:6px; text-align:left;">Task
                                                </th>
                                                <th style="border:1px solid #ddd; padding:6px;">Deadline</th>
                                                <th style="border:1px solid #ddd; padding:6px;">Deadline Met?</th>
                                                <th style="border:1px solid #ddd; padding:6px;">Description</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr>
                                                <td style="text-align:left;">Depreciation Schedules</td>
                                                <td>2nd Business Day</td>
                                                <td style="text-align:center;">
                                                    <field name="is_depreciation_schedules" widget="boolean_toggle"/>
                                                </td>
                                                <td>
                                                    <field name="depreciation_schedules"/>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td style="text-align:left;">Net Assets Schedules</td>
                                                <td>15th Business Day</td>
                                                <td style="text-align:center;">
                                                    <field name="is_net_assets_schedules" widget="boolean_toggle"/>
                                                </td>
                                                <td/>
                                            </tr>
                                            <tr>
                                                <td style="text-align:left;">Intangible Assets Schedules</td>
                                                <td>2nd Business Day</td>
                                                <td style="text-align:center;">
                                                    <field name="is_intangible_assets_schedules"
                                                           widget="boolean_toggle"/>
                                                </td>
                                                <td/>
                                            </tr>
                                            <tr>
                                                <td style="text-align:left;">Intercompany A/R &amp; A/P Schedules</td>
                                                <td>10th Business Day</td>
                                                <td style="text-align:center;">
                                                    <field name="is_intercompany_ar_ap_schedule"
                                                           widget="boolean_toggle"/>
                                                </td>
                                                <td>
                                                    <field name="intercompany_ar_ap_schedule"/>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td style="text-align:left;">Cash Reconciliation</td>
                                                <td>3rd Business Day</td>
                                                <td style="text-align:center;">
                                                    <field name="is_cash_reconcile" widget="boolean_toggle"/>
                                                </td>
                                                <td>
                                                    <field name="cash_reconcile"/>
                                                </td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </group>
                        </page>
                    </notebook>
                    <br/>
                    <br/>
                    <br/>
                    <group>
                        <!--                        <group>-->
                        <field name="description"/>
                        <!--                        </group>-->
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_project_daily_progress_business" model="ir.actions.act_window">
        <field name="name">Project Daily Progress Business</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">daily.progress.business</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_project_daily_progress_business"
              name="Daily Progress Business"
              parent="project.menu_main_pm"
              action="action_project_daily_progress_business"
              sequence="24"/>
</odoo>
