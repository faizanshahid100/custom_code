<odoo>
    <record id="view_daily_progress_business_tree" model="ir.ui.view">
        <field name="name">daily.progress.business.tree</field>
        <field name="model">daily.progress.business</field>
        <field name="arch" type="xml">
            <tree string="Daily Progress Business" create="true" edit="true">
                <field name="resource_user_id"/>
                <field name="date_of_project"/>
                <field name="finance_area"/>
            </tree>
        </field>
    </record>

    <record id="view_daily_progress_business_form" model="ir.ui.view">
        <field name="name">daily.progress.business.form</field>
        <field name="model">daily.progress.business</field>
        <field name="arch" type="xml">
            <form string="Daily Progress Business" create="true" edit="true">
                <sheet>
                    <group>
                        <group>
                            <field name="resource_user_id" required="1"/>
                            <field name="date_of_project" required="1"/>
                            <field name="finance_area" required="1"/>
                        </group>
                        <group>
                            <field name="week_of_year" readonly="1"/>
                            <field name="year_of_kpi" readonly="1"/>
                        </group>
                    </group>

                    <notebook>
                        <!-- Financial Planning & Analysis -->
                        <page string="Financial Planning &amp; Analysis"
                              attrs="{'invisible': [('finance_area', '!=', 'fpna')]}">
                            <group>
                                <field name="project"/>
                                <field name="is_deadline_met"/>
                                <field name="is_week_meeting"/>
                                <field name="comments"/>
                                <field name="manager_comment"/>
                            </group>
                        </page>

                        <!-- Accounts Payable -->
                        <page string="Accounts Payable" attrs="{'invisible': [('finance_area', '!=', 'ap')]}">
                            <group>
                                <field name="invoice_count"/>
                                <field name="pending_approval_count"/>
                                <field name="closed_ticket_count"/>
                            </group>
                        </page>

                        <!-- Accounts Receivable -->
                        <page string="Accounts Receivable" attrs="{'invisible': [('finance_area', '!=', 'ar')]}">
                            <group>
                                <field name="invoice_count"/>
                                <field name="number_of_calls"/>
                                <field name="bad_debt"/>
                                <field name="recovery_of_bad_debt"/>
                            </group>
                        </page>

                        <!-- Senior Accountant Page -->
                        <page string="Senior Accountant" attrs="{'invisible': [('finance_area', '!=', 'sa')]}">
                            <style>
                                .sa-table th, .sa-table td {
                                border: 1px solid #e0e0e0;
                                padding: 8px 10px;
                                text-align: center;
                                }
                                .sa-table th {
                                background-color: #f9fafb;
                                color: #333;
                                font-weight: 600;
                                }
                                .sa-table td:first-child {
                                text-align: left;
                                font-weight: 500;
                                color: #2b2b2b;
                                }
                                .sa-section-title {
                                background-color: #f0f4f8;
                                color: #1a237e;
                                padding: 8px 12px;
                                border-radius: 6px;
                                font-weight: bold;
                                margin: 10px 0;
                                font-size: 15px;
                                }
                                .o_horizontal_radio .o_radio_item {
                                display: inline-block !important;
                                margin-right: 12px;
                                }
                            </style>

                            <group>
                                <div class="sa-section-title"/>
                                <div style="overflow-x: auto; margin-bottom: 20px;">
                                    <table class="o_group o_inner_group sa-table" style="width:100%; font-size:13px;">
                                        <thead>
                                            <tr>
                                                <th style="width:40%;">Task</th>
                                                <th style="width:30%;">Deadline</th>
                                                <th style="width:30%;">Deadline Met?</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr>
                                                <td>Accrued Expenses</td>
                                                <td>3rd Business Day</td>
                                                <td>
                                                    <field name="is_accrued_expenses" widget="radio"
                                                           class="o_horizontal_radio"/>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td>Decommissioning</td>
                                                <td>-2 Business Day</td>
                                                <td>
                                                    <field name="is_decommissioning" widget="radio"
                                                           class="o_horizontal_radio"/>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td>Leases</td>
                                                <td>1st Business Day</td>
                                                <td>
                                                    <field name="is_leases" widget="radio" class="o_horizontal_radio"/>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td>Other Current Assets</td>
                                                <td>3rd Business Day</td>
                                                <td>
                                                    <field name="is_other_current_assets" widget="radio"
                                                           class="o_horizontal_radio"/>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td>Prepaid Expenses</td>
                                                <td>3rd Business Day</td>
                                                <td>
                                                    <field name="is_prepaid_expenses" widget="radio"
                                                           class="o_horizontal_radio"/>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td>Third Party Borrowing</td>
                                                <td>2nd Business Day</td>
                                                <td>
                                                    <field name="is_third_party_borrowing" widget="radio"
                                                           class="o_horizontal_radio"/>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td>ARO</td>
                                                <td>-1 Business Day</td>
                                                <td>
                                                    <field name="is_aro" widget="radio" class="o_horizontal_radio"/>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td>Net Assets Schedules</td>
                                                <td>15th Business Day</td>
                                                <td>
                                                    <field name="is_net_assets_schedules" widget="radio"
                                                           class="o_horizontal_radio"/>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td>Intangible Assets Schedules</td>
                                                <td>2nd Business Day</td>
                                                <td>
                                                    <field name="is_intangible_assets_schedules" widget="radio"
                                                           class="o_horizontal_radio"/>
                                                </td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </group>

                            <group>
                                <div class="sa-section-title"/>
                                <div style="overflow-x: auto;">
                                    <table class="o_group o_inner_group sa-table" style="width:100%; font-size:13px;">
                                        <thead>
                                            <tr>
                                                <th>Task</th>
                                                <th>Deadline</th>
                                                <th>Deadline Met?</th>
                                                <th>Description</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr>
                                                <td>Depreciation Schedules</td>
                                                <td>4th Business Day</td>
                                                <td>
                                                    <field name="is_depreciation_schedules" widget="radio"
                                                           class="o_horizontal_radio"/>
                                                </td>
                                                <td>
                                                    <field name="depreciation_schedules"
                                                           placeholder="Add description..."/>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td>Intercompany A/R &amp; A/P Schedules</td>
                                                <td>10th Business Day</td>
                                                <td>
                                                    <field name="is_intercompany_ar_ap_schedule" widget="radio"
                                                           class="o_horizontal_radio"/>
                                                </td>
                                                <td>
                                                    <field name="intercompany_ar_ap_schedule"
                                                           placeholder="Add description..."/>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td>Cash Reconciliation</td>
                                                <td>3rd Business Day</td>
                                                <td>
                                                    <field name="is_cash_reconcile" widget="radio"
                                                           class="o_horizontal_radio"/>
                                                </td>
                                                <td>
                                                    <field name="cash_reconcile" placeholder="Add description..."/>
                                                </td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </group>

                        </page>

                        <!-- Corporate Accounting Supervisor -->
                        <page string="Corporate Accounting Supervisor" attrs="{'invisible': [('finance_area', '!=', 'cas')]}">

                            <style>
                                .sa-table th, .sa-table td {
                                border: 1px solid #e0e0e0;
                                padding: 8px 10px;
                                text-align: center;
                                }
                                .sa-table th {
                                background-color: #f9fafb;
                                color: #333;
                                font-weight: 600;
                                }
                                .sa-table td:first-child {
                                text-align: left;
                                font-weight: 500;
                                color: #2b2b2b;
                                }
                                .sa-section-title {
                                background-color: #f0f4f8;
                                color: #1a237e;
                                padding: 8px 12px;
                                border-radius: 6px;
                                font-weight: bold;
                                margin: 10px 0;
                                font-size: 15px;
                                }
                                .o_horizontal_radio .o_radio_item {
                                display: inline-block !important;
                                margin-right: 12px;
                                }
                            </style>

                            <group>
                                <div class="sa-section-title"/>
                                <div style="overflow-x: auto; margin-bottom: 20px;">
                                    <table class="o_group o_inner_group sa-table" style="width:100%; font-size:13px;">
                                        <thead>
                                            <tr>
                                                <th style="width:40%;">Task</th>
                                                <th style="width:30%;">Deadline</th>
                                                <th style="width:30%;">Deadline Met?</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr>
                                                <td>Update all the POs in FOM sheet</td>
                                                <td>-1 Business Day</td>
                                                <td>
                                                    <field name="is_po_in_fom" widget="radio"
                                                           class="o_horizontal_radio"/>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td>Upload all the inventory JEs in Netsuite as per FOM sheet</td>
                                                <td>5th Business Day</td>
                                                <td>
                                                    <field name="is_je_in_netsuite" widget="radio"
                                                           class="o_horizontal_radio"/>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td>Update the summary sheet of JEs</td>
                                                <td>5th Business Day</td>
                                                <td>
                                                    <field name="is_summary_sheet_of_je" widget="radio" class="o_horizontal_radio"/>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td>Preparation of on-site inventory reconciliation.</td>
                                                <td>10th Business Day</td>
                                                <td>
                                                    <field name="is_preparation_inventory_reconciliation" widget="radio"
                                                           class="o_horizontal_radio"/>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td>Preparation of warehouse inventory reconciliation</td>
                                                <td>10th Business Day</td>
                                                <td>
                                                    <field name="is_preparation_warehouse_reconciliation" widget="radio"
                                                           class="o_horizontal_radio"/>
                                                </td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </group>

                        </page>

                        <!-- Associate Procurement Specialist -->
                        <page string="Associate Procurement Specialist" attrs="{'invisible': [('finance_area', '!=', 'aps')]}">
                            <group>
                                <field name="number_of_tickets"/>
                                <field name="number_of_opportunities"/>
                                <field name="number_of_opportunities_won"/>
                            </group>
                        </page>

                        <!-- Procurement Specialist-->
                        <page string="Procurement Specialist" attrs="{'invisible': [('finance_area', '!=', 'ps')]}">
                            <group>
                                <field name="number_of_tickets"/>
                                <field name="number_of_opportunities"/>
                                <field name="number_of_opportunities_won"/>
                            </group>
                        </page>

                    </notebook>
                    <br/>
                    <br/>
                    <br/>
                    <group>
                        <field name="description" placeholder="Type '/' for commands"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_project_daily_progress_business" model="ir.actions.act_window">
        <field name="name">Project Daily Progress Business</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">daily.progress.business</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_project_daily_progress_business"
              name="Daily Progress Business"
              parent="project.menu_main_pm"
              action="action_project_daily_progress_business"
              sequence="24"/>
</odoo>
