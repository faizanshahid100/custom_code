<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Search View -->
    <record id="view_hr_employee_feedback_search" model="ir.ui.view">
        <field name="name">hr.employee.feedback.search</field>
        <field name="model">hr.employee.feedback</field>
        <field name="arch" type="xml">
            <search string="Employee Feedback Search">
                <field name="employee_id"/>
                <field name="client_id"/>
                <field name="manager_id"/>
                <field name="feedback_type"/>
                <field name="gar"/>
                <field name="feedback_status"/>
                <field name="date_feedback"/>
                <field name="next_followup_date"/>
                <group expand="0" string="Group By">
                    <filter name="group_feedback_type" string="Feedback Type" domain="[]"
                            context="{'group_by': 'feedback_type'}"/>
                    <filter name="group_client" string="Client" domain="[]" context="{'group_by': 'client_id'}"/>
                    <filter name="group_feedback_status" string="Feedback Status" domain="[]"
                            context="{'group_by': 'feedback_status'}"/>
                </group>
            </search>
        </field>
    </record>
    <!-- Tree View -->
    <record id="view_hr_employee_feedback_tree" model="ir.ui.view">
        <field name="name">hr.employee.feedback.tree</field>
        <field name="model">hr.employee.feedback</field>
        <field name="arch" type="xml">
            <tree>
                <field name="employee_id"/>
                <field name="date_feedback"/>
                <field name="client_id"/>
                <field name="manager_id"/>
                <field name="feedback_type"/>
                <field name="gar"/>
                <field name="client_feedback"/>
                <field name="outcome_suggested"/>
                <field name="next_followup_date"/>
                <field name="feedback_status"/>
                <field name="comment"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_hr_employee_feedback_form" model="ir.ui.view">
        <field name="name">hr.employee.feedback.form</field>
        <field name="model">hr.employee.feedback</field>
        <field name="arch" type="xml">
            <form string="Employee Feedback">
                <sheet>
                    <!-- Banner -->
                    <widget name="web_ribbon" title="GREEN"
                            bg_color="bg-success"
                            attrs="{'invisible': [('gar', '!=', 'green')]}"/>
                    <widget name="web_ribbon" title="Yellow"
                            bg_color="bg-warning"
                            attrs="{'invisible': [('gar', '!=', 'yellow')]}"/>
                    <widget name="web_ribbon" title="RED"
                            bg_color="bg-danger"
                            attrs="{'invisible': [('gar', '!=', 'red')]}"/>
                    <group>
                        <group>
                            <field name="employee_id" options="{'no_create':True, 'no_open':True}"/>
                            <field name="client_id" readonly="1" force_save="1"/>
                            <field name="manager_id" domain="[('parent_id', '=', client_id), ('parent_id', '!=', False)]"/>
                            <field name="manager_email" readonly="1"/>
                            <field name="business_tech"/>
                            <field name="month" invisible="1"/>
                            <field name="current_month_schedule" invisible="1"/>
                            <field name="current_meeting_frequency" invisible="1"/>
                        </group>
                        <group>
                            <field name="date_feedback"/>
                            <field name="is_meeting_done" invisible="1"/>
                            <field name="is_meeting_rescheduled" invisible="1"/>
                            <field name="client_feedback" widget="text"/>
                            <field name="feedback_type"/>
                            <field name="gar"/>
                            <field name="feedback_status"/>
                            <field name="next_followup_date"/>
                        </group>
                    </group>
                    <notebook>
                        <page name='outcome_suggested' string="Action Steps">
                            <field name="outcome_suggested" widget="text" placeholder="Type '/' for commands"/>
                        </page>
                        <page name='task_assignment' string="Task Assignment">
                            <field name="task_assign_line_ids">
                                <tree editable="bottom">
                                    <field name="reason"/>
                                    <field name="to_employee_ids" widget="many2many_tags"
                                           groups="csm_customization.group_csm"/>
                                    <field name="cc_employee_ids" widget="many2many_tags"
                                           groups="csm_customization.group_csm"/>
                                    <field name="priority" widget="priority"/>
                                    <field name="assign_date"/>
                                    <field name="action_taken_comment"/>
                                    <field name="employee_task_confirmed" widget="boolean_toggle"/>
                                    <field name="csm_task_confirmed" groups="csm_customization.group_csm"/>
                                    <button name="action_send_action_mail" type="object" class="oe_highlight"
                                            string="Send Email" icon="fa-envelope"/>
                                </tree>
                            </field>
                            <button name="action_send_reason_mail" type="object" string="Send Reason Mail"
                                    class="btn-primary" icon="fa-envelope" groups="sdm_customization.group_sdm"/>
                        </page>
                        <page name='comment' string="Notes">
                            <field name="comment" placeholder="Type '/' for commands"/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_hr_employee_feedback" model="ir.actions.act_window">
        <field name="name">Employee Feedback</field>
        <field name="res_model">hr.employee.feedback</field>
        <field name="view_mode">search,tree,form,pivot</field>
        <field name="search_view_id" ref="view_hr_employee_feedback_search"/>
        <field name="help" type="html">
            <p>
                Manage employee feedback from clients and track follow-up actions.
            </p>
        </field>
    </record>

    <!-- Menu Item -->
    <menuitem id="menu_csm_head" name="CSM Client Feedback"
              parent="csm_customization.menu_csm_root"/>
    <menuitem id="menu_hr_employee_feedback" name="Emp Feedback"
              parent="prime_sol_custom.menu_csm_head"
              action="prime_sol_custom.action_hr_employee_feedback"/>
<!--     web_icon="prime_sol_custom,static/description/feedback.png"-->

</odoo>
