<odoo>
    <!-- Tree View -->
    <record id="view_dynamic_progress_tree" model="ir.ui.view">
        <field name="name">dynamic.progress.tree</field>
        <field name="model">dynamic.progress</field>
        <field name="arch" type="xml">
            <tree>
                <field name="date"/>
                <field name="resource_user_id"/>
                <field name="shift"/>
                <field name="task"/>
                <field name="assigned"/>
                <field name="project"/>
                <field name="start_time"/>
                <field name="end_time"/>
                <field name="total_hours"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_dynamic_progress_form" model="ir.ui.view">
        <field name="name">dynamic.progress.form</field>
        <field name="model">dynamic.progress</field>
        <field name="arch" type="xml">
            <form string="Dynamic Progress">
                <sheet>
                    <group>
                        <group>
                            <field name="resource_user_id"/>
                            <field name="assigned"/>
                            <field name="project"/>
                            <field name="task"/>
                            <field name="shift"/>
                        </group>
                        <group>
                            <field name="date"/>
                            <field name="start_time"/>
                            <field name="end_time"/>
                            <field name="total_hours" readonly="1"/>
                        </group>
                    </group>
                    <group>
                        <field name="comment" widget="text"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_dynamic_progress" model="ir.actions.act_window">
        <field name="name">Dynamic Progress</field>
        <field name="res_model">dynamic.progress</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p>
                Track employee progress dynamically based on assigned tasks.
            </p>
        </field>
    </record>

    <!-- Menu Item -->
    <menuitem id="menu_project_dynamic_task_progress"
              name="Dynamic Task Updates"
              parent="prime_sol_custom.menu_project_daily_progress"
              action="action_dynamic_progress"
              sequence="10"/>
</odoo>