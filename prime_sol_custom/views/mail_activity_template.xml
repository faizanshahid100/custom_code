<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Inherit the original activity email template -->
    <template id="mail_message_activity_assigned_inherit"
              inherit_id="mail.message_activity_assigned">

        <!-- Insert after the Document line -->
        <xpath expr="//li[contains(text(), 'Document')]" position="after">

            <!-- Load record -->
            <t t-set="record" t-value="activity.env[activity.res_model].browse(activity.res_id)"/>

            <!-- Show approval type only for Approval Requests -->
            <t t-if="activity.res_model == 'approval.request'">
                <li>
                    <b>Approval Type:</b>
                    <t t-esc="record.category_id.name"/>
                </li>
            </t>

        </xpath>

    </template>
</odoo>
