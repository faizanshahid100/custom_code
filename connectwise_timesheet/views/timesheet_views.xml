<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- Tree View -->
    <record id="connectwise_timesheet_tree" model="ir.ui.view">
        <field name="name">connectwise.timesheet.tree</field>
        <field name="model">connectwise.timesheet</field>
        <field name="arch" type="xml">
            <tree>
                <field name="employee_id"/>
                <field name="work_date"/>
                <field name="total_hours"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="connectwise_timesheet_form" model="ir.ui.view">
        <field name="name">connectwise.timesheet.form</field>
        <field name="model">connectwise.timesheet</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="employee_id"/>
                            <field name="total_hours"/>
                        </group>
                        <group>
                            <field name="work_date"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Work Details">
                            <field name="line_ids">
                                <tree editable="bottom">
                                    <field name="timespan"/>
                                    <field name="charge_to"/>
                                    <field name="work_role"/>
                                    <field name="actual_hours"/>
                                    <field name="notes"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_connectwise_timesheet" model="ir.actions.act_window">
        <field name="name">ConnectWise Timesheets</field>
        <field name="res_model">connectwise.timesheet</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Menu -->
    <menuitem id="menu_connectwise_root" name="ConnectWise"/>
    <menuitem id="menu_connectwise_timesheet"
              name="Timesheets"
              sequence="5"
              parent="menu_connectwise_root"
              action="action_connectwise_timesheet"/>
</odoo>
