<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!--    Search View-->
    <record id="connectwise_timesheet_search" model="ir.ui.view">
        <field name="name">connectwise.timesheet.search</field>
        <field name="model">connectwise.timesheet</field>
        <field name="arch" type="xml">
            <search>
                <field name="employee_id"/>
                <field name="work_date"/>

                <group expand="0" string="Group By">
                    <filter
                            name="groupby_employee"
                            string="Employee"
                            context="{'group_by': 'employee_id'}"/>
                    <filter
                            name="groupby_date"
                            string="Work Date"
                            context="{'group_by': 'work_date'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Tree View -->
    <record id="connectwise_timesheet_tree" model="ir.ui.view">
        <field name="name">connectwise.timesheet.tree</field>
        <field name="model">connectwise.timesheet</field>
        <field name="arch" type="xml">
            <tree>
                <field name="work_date"/>
                <field name="employee_id"/>
                <field name="tickets"/>
                <field name="total_hours" widget="float_time"/>
                <field name="billable_hours" widget="float_time"/>
                <field name="non_billable_hours" widget="float_time"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="connectwise_timesheet_form" model="ir.ui.view">
        <field name="name">connectwise.timesheet.form</field>
        <field name="model">connectwise.timesheet</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="employee_id"/>
                            <field name="billable_hours" widget="float_time"/>
                            <field name="tickets"/>
                        </group>
                        <group>
                            <field name="work_date"/>
                            <field name="non_billable_hours" widget="float_time"/>
                            <field name="total_hours" widget="float_time"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Work Details">
                            <field name="line_ids">
                                <tree editable="bottom">
                                    <field name="ticket"/>
                                    <field name="internal_ticket"/>
                                    <field name="timespan"/>
                                    <field name="charge_to"/>
                                    <field name="work_role"/>
                                    <field name="actual_hours" widget="float_time"/>
                                    <field name="notes"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_connectwise_timesheet" model="ir.actions.act_window">
        <field name="name">ConnectWise Timesheets</field>
        <field name="res_model">connectwise.timesheet</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Menu -->
    <menuitem id="menu_connectwise_root" name="ConnectWise"
              web_icon="connectwise_timesheet,static/description/connectwise.png"/>
    <menuitem id="menu_connectwise_timesheet"
              name="Timesheets"
              sequence="5"
              parent="menu_connectwise_root"
              action="action_connectwise_timesheet"/>
</odoo>
