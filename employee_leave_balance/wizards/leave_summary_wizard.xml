<odoo>
    <record id="view_leave_summary_wizard" model="ir.ui.view">
        <field name="name">leave.summary.wizard.form</field>
        <field name="model">leave.summary.wizard</field>
        <field name="arch" type="xml">
            <form string="Leave Summary Report">
                <group>
                    <group>
                        <field name="date_from"/>
                    </group>
                    <group>
                        <field name="date_to"/>
                    </group>
                </group>
                <footer>
                    <button string="Generate Report"
                            type="object"
                            name="action_generate_report"
                            class="btn-primary"/>
                    <button string="Cancel"
                            class="btn-secondary"
                            special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_leave_summary_wizard" model="ir.actions.act_window">
        <field name="name">Leave Summary Report</field>
        <field name="res_model">leave.summary.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <menuitem
            id="menu_leave_summary_wizard"
            name="Leave Summary"
            groups="hr.group_hr_manager"
            action="employee_leave_balance.action_leave_summary_wizard"
    />
</odoo>
