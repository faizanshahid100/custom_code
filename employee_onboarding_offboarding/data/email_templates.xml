<odoo>
    <record id="candidate_offer_approval_template" model="mail.template">
        <field name="name">Candidate Offer Approval</field>
        <field name="model_id" ref="employee_onboarding_offboarding.model_hr_offer"/>
        <field name="email_from">hr@primesystemsolutions.com</field>
        <field name="subject">Offer Approval Required for {{ object.candidate_name }}</field>
        <field name="body_html" type="html">
            <p>Dear
                <strong>CEO,</strong>
            </p>
            <p>A new candidate offer has been submitted for your approval. Please review the details below:</p>

            <table style="border-collapse:collapse; width:100%; border:1px solid #000;">
                <tr>
                    <th style="text-align:left; border:1px solid #000; padding:6px;">Candidate</th>
                    <td style="border:1px solid #000; padding:6px;">
                        <t t-out="object.candidate_name"/>
                    </td>
                </tr>
                <tr>
                    <th style="text-align:left; border:1px solid #000; padding:6px;">Mobile</th>
                    <td style="border:1px solid #000; padding:6px;">
                        <t t-out="object.candidate_mobile"/>
                    </td>
                </tr>
                <tr>
                    <th style="text-align:left; border:1px solid #000; padding:6px;">Candidate Email</th>
                    <td style="border:1px solid #000; padding:6px;">
                        <t t-out="object.personal_email"/>
                    </td>
                </tr>
                <tr>
                    <th style="text-align:left; border:1px solid #000; padding:6px;">Pillar</th>
                    <td style="border:1px solid #000; padding:6px;">
                        <t t-out="object.pillar"/>
                    </td>
                </tr>
                <tr>
                    <th style="text-align:left; border:1px solid #000; padding:6px;">Reporting Time</th>
                    <td style="border:1px solid #000; padding:6px;">
                        <t t-out="object.reporting_time"/>
                    </td>
                </tr>
                <tr>
                    <th style="text-align:left; border:1px solid #000; padding:6px;">Working Hours</th>
                    <td style="border:1px solid #000; padding:6px;">
                        <t t-out="object.working_hours"/>
                    </td>
                </tr>
                <tr>
                    <th style="text-align:left; border:1px solid #000; padding:6px;">Manager (Client)</th>
                    <td style="border:1px solid #000; padding:6px;">
                        <t t-out="object.manager"/>
                    </td>
                </tr>
                <tr>
                    <th style="text-align:left; border:1px solid #000; padding:6px;">Manager Email</th>
                    <td style="border:1px solid #000; padding:6px;">
                        <t t-out="object.manager_email"/>
                    </td>
                </tr>
                <tr>
                    <th style="text-align:left; border:1px solid #000; padding:6px;">Client</th>
                    <td style="border:1px solid #000; padding:6px;">
                        <t t-out="object.client_id.name"/>
                    </td>
                </tr>
                <tr>
                    <th style="text-align:left; border:1px solid #000; padding:6px;">Designation</th>
                    <td style="border:1px solid #000; padding:6px;">
                        <t t-out="object.job_id.name"/>
                    </td>
                </tr>
                <tr>
                    <th style="text-align:left; border:1px solid #000; padding:6px;">Department</th>
                    <td style="border:1px solid #000; padding:6px;">
                        <t t-out="object.department_id.name"/>
                    </td>
                </tr>
                <tr>
                    <th style="text-align:left; border:1px solid #000; padding:6px;">Department HoD</th>
                    <td style="border:1px solid #000; padding:6px;">
                        <t t-out="object.dept_hod"/>
                    </td>
                </tr>
                <tr>
                    <th style="text-align:left; border:1px solid #000; padding:6px;">HoD Email</th>
                    <td style="border:1px solid #000; padding:6px;">
                        <t t-out="object.dept_hod_email"/>
                    </td>
                </tr>
                <tr>
                    <th style="text-align:left; border:1px solid #000; padding:6px;">Internal Manager</th>
                    <td style="border:1px solid #000; padding:6px;">
                        <t t-out="object.manager_id.name"/>
                    </td>
                </tr>
                <tr>
                    <th style="text-align:left; border:1px solid #000; padding:6px;">Proposed Joining Date</th>
                    <td style="border:1px solid #000; padding:6px;">
                        <t t-out="object.joining_date"/>
                    </td>
                </tr>
                <tr>
                    <th style="text-align:left; border:1px solid #000; padding:6px;">Salary</th>
                    <td style="border:1px solid #000; padding:6px;">
                        <t t-out="object.currency_id.name"/>
                        <t t-out="object.salary"/>
                    </td>
                </tr>
                <tr>
                    <th style="text-align:left; border:1px solid #000; padding:6px;">Allowances</th>
                    <td style="border:1px solid #000; padding:6px;">
                        <t t-out="object.currency_id.name"/>
                        <t t-out="object.allowances"/>
                    </td>
                </tr>
                <tr>
                    <th style="text-align:left; border:1px solid #000; padding:6px;">Internal Remarks</th>
                    <td style="border:1px solid #000; padding:6px;">
                        <t t-out="object.internal_remarks"/>
                    </td>
                </tr>
            </table>
            <br/>
            <br/>
            <p>
                <t t-set="url" t-value="'/web#id=%s&amp;model=hr.offer&amp;view_type=form' % object.id"/>
                <a t-att-href="url"
                   style="display:inline-block;padding:10px 20px;background-color:#1e88e5;color:#fff;text-decoration:none;border-radius:5px;">
                    Review Offer in Odoo
                </a>
            </p>

            <p>Regards,<br/>HR Team
            </p>
        </field>
    </record>

    <record id="candidate_offer_modification_template" model="mail.template">
        <field name="name">Candidate Offer Modification Notification</field>
        <field name="model_id" ref="employee_onboarding_offboarding.model_hr_offer"/>
        <field name="email_from">hr@primesystemsolutions.com</field>
        <field name="subject">Offer for {{ object.candidate_name }} sent back for modification</field>
        <field name="body_html" type="html">
            <p>Dear
                <t t-out="object.offer_submitter_id.name"/>
                ,
            </p>
            <p>
                The offer for candidate
                <strong>
                    <t t-out="object.candidate_name"/>
                </strong>
                has been
                sent back to <strong>Modification</strong> state by the CEO.
            </p>
            <p>
                <strong>Reason:</strong>
                <br/>
                <t t-out="object.remarks"/>
            </p>

            <p>
                <t t-set="url" t-value="'/web#id=%s&amp;model=hr.offer&amp;view_type=form' % object.id"/>
                <a t-att-href="url"
                   style="display:inline-block;padding:10px 20px;background-color:#1e88e5;color:#fff;text-decoration:none;border-radius:5px;">
                    Review Offer in Odoo
                </a>
            </p>
            <p>Please review and update the offer accordingly.</p>
        </field>
    </record>

    <!--    Offer latter Pakistan-->
    <record id="candidate_offer_final_template" model="mail.template">
        <field name="name">Candidate Final Offer Email PK</field>
        <field name="model_id" ref="employee_onboarding_offboarding.model_hr_offer"/>
        <field name="email_from">hr@primesystemsolutions.com</field>
        <field name="subject">Offer Letter - Prime System Solutions</field>
        <field name="email_to">{{object.personal_email}}</field>
        <field name="email_cc">sadia.hamid@primesystemsolutions.com,umair.zafar@primesystemsolutions.com,hassan.zia@primesystemsolutions.com,misbah.yasir@primesystemsolutions.com,{{object.offer_submitter_id.login}}
        </field>
        <field name="body_html" type="html">
            <p>Dear
                <b>
                    <strong>
                        <t t-out="object.candidate_name"/>
                    </strong>
                </b>
                ,
            </p>

            <p>
                We are pleased to extend to you an offer for the position of
                <b>
                    <t t-out="object.job_id.name"/>
                </b>
                at <b>Prime System Solutions</b>.
                Your professional background, expertise, and enthusiasm make you a strong fit for our team,
                and we are confident that you will contribute meaningfully to our mission.
            </p>

            <p>
                At Prime System Solutions, we foster a dynamic and collaborative work environment where innovation
                thrives,
                boundaries are challenged, and careers flourish. Our goal is to connect individuals, locations, and
                processes driven
                by fresh ideas, strategic vision, and a shared passion for excellence.
                We celebrate diversity, recognize hard work, and are committed to building a team of achievers, leaders,
                and innovators.
            </p>

            <h4>Employment Details:</h4>
            <p>
                <b>Work Environment</b>
            </p>
            <ul>
                <li>
                    <b>Location/Site:</b>
                    <t t-out="dict(onsite='Onsite, Lahore', remote='Remote', hybrid='Hybrid').get(object.work_location, '')"/>
                </li>
                <li>
                    <b>Business Hours:</b>
                    <t t-out="object.reporting_time"/>
                </li>
                <li>
                    <b>Special Instructions:</b>
                    <t t-out="object.special_instructions"/>
                </li>
            </ul>

            <p>
                <b>Compensation &amp; Benefits</b>
            </p>
            <ul>
                <li>
                    <b>Basic Salary:</b>
                    <t t-out="object.currency_id.name"/>
                    <t t-out="'{:,.0f}'.format(object.salary)"/>
                    per month
                </li>
                <t t-if="object.allowances > 0">
                    <li>
                        <b>Allowances:</b>
                        <t t-out="object.currency_id.name"/>
                        <t t-out="'{:,.0f}'.format(object.allowances)"/>
                        per month
                    </li>
                </t>
                <li>
                    <b>Employment Type:</b>
                    <t t-out="object.employment_type.capitalize()"/>
                </li>
                <li>
                    <b>Probation Period:</b>
                    <t t-out="object.probation_period"/>
                    months
                </li>
            </ul>

            <p>
                <b>Health Insurance Coverage</b>
            </p>
            <ul>
                <li>OPD: Up to PKR 60,000 per annum</li>
                <li>IPD: Up to PKR 350,000 per person (employee, spouse and children)</li>
            </ul>

            <h4>Next Steps</h4>
            <p>
                To confirm your acceptance, please reply to this email by
                <b>
                    <t t-out="format_date((datetime.date.today() + relativedelta(days=+2)), date_format='EEEE, d MMMM y')"/>
                </b>
                .
                Kindly attach the following documents with your confirmation:
            </p>
            <ul>
                <li>A copy of your CNIC (front and back)</li>
                <li>A clear, front-facing photograph for introductory cards</li>
            </ul>
            <p>Fill out the Candidate Information Form by clicking the button below:</p>
            <p>
                <a href="https://forms.office.com/r/1frZvYykWQ" target="_blank"
                   style="display:inline-block; padding:10px 20px; font-size:14px;
                          font-weight:bold; color:#ffffff; background-color:#1a73e8;
                          text-decoration:none; border-radius:6px;">
                    Candidate Information Form
                </a>
            </p>

            <p>
                Once we receive your confirmation, we will issue the formal employment contract for digital signature.
                <br/>
                Your expected joining date is
                <b>
                    <t t-out="object.joining_date"/>
                </b>
                .
            </p>

            <p>
                We are excited to have you join our team and look forward to the impact your skills and experience will
                bring
                to Prime System Solutions. If you have any questions or need further clarification,
                please feel free to reach out.
            </p>

            <br/>
            <p>
                <b>Regards,</b>
                <br/>
                <t t-out="object.env.user.name"/>
                <br/>
                HR Team
                <br/>
                Prime System Solutions
            </p>
        </field>
    </record>

    <!--    Offer Latter Phillipines-->
    <record id="candidate_offer_final_template_philippines" model="mail.template">
        <field name="name">Candidate Final Offer Email PH</field>
        <field name="model_id" ref="employee_onboarding_offboarding.model_hr_offer"/>
        <field name="email_from">hr@primesystemsolutions.com</field>
        <field name="subject">Offer Letter - Prime System Solutions</field>
        <field name="email_to">{{object.personal_email}}</field>
        <field name="email_cc">sadia.hamid@primesystemsolutions.com,umair.zafar@primesystemsolutions.com,hassan.zia@primesystemsolutions.com,sharo.domingo@primesystemsolutions.com,patricia.reyes@primesystemsolutions.com,{{object.offer_submitter_id.login}}
        </field>
        <field name="body_html" type="html">
            <p>Dear
                <b>
                    <strong>
                        <t t-out="object.candidate_name"/>
                    </strong>
                </b>
                ,
            </p>

            <p>
                We are delighted to extend to you the position of
                <b>
                    <t t-out="object.job_id.name"/>
                </b>
                at <b>Prime System Solutions</b>.
                Your professional background and enthusiasm make you an ideal fit for our team!
            </p>

            <p>
                At Prime IT INC, we foster an environment where you can unlock your full potential, challenge norms, and
                advance your career. We strive to unite individuals, locations, and processes, seeking individuals who
                can innovate, envision, and collaborate with us. Our culture celebrates diversity and recognizes
                diligence. We are in search of achievers, leaders, and innovators. Joining Prime IT Inc., means
                embracing a dynamic and ever-evolving business landscape.
            </p>

            <h4>Below are the details of your employment:</h4>
            <p>
                <b>Work Environment</b>
            </p>
            <ul>
                <li>
                    <b>Client Company:</b>
                    Prime IT INC.
                </li>
                <li>
                    <b>Reporting To:</b>
                    TBC
                </li>
                <li>
                    <b>Location/Site:</b>
                    Remote, Philippines
                </li>
                <li>
                    <b>Business Operation Schedule:</b>
                    TBC
                </li>
                <li>
                    <b>Compensation</b>
                    <br/>
                    o Your compensation will be PHP
                    <t t-out="'{:,.0f}'.format(object.salary)"/>
                    base compensation and PHP
                    <t t-out="'{:,.0f}'.format(object.allowances)"/>
                    De Minimis
                    <br/>
                    o Salary will be paid on bi-monthly basis
                </li>
                <li>
                    <b>Employment Type:</b>
                    <t t-out="object.employment_type.capitalize()"/>
                </li>
                <li>
                    <b>Probation Period</b>
                    <br/>
                    o Your employment probation period will be at 6 months with 90-day performance review
                </li>
                <li>
                    <b>Special Instructions:</b>
                    <t t-out="object.special_instructions"/>
                </li>
            </ul>

            <p>
                <b>Please be advised that the employment contract will be released following the successful completion
                    of the character reference check. Non-compliance with this pre-onboarding requirement, or an
                    unfavorable reference outcome, may result in a delay of your start date and/or withdrawal of the
                    offer.
                </b>
            </p>
            <p>
                Please provide the following information for our record: Link:
                <a href="https://forms.office.com/r/1frZvYykWQ" target="_blank"
                   style="display:inline-block; padding:10px 20px; font-size:14px;
                          font-weight:bold; color:#ffffff; background-color:#1a73e8;
                          text-decoration:none; border-radius:6px;">Click Here
                </a>
            </p>

            <h4>Next Steps</h4>
            <p>
                We kindly request your response to this employment offer on or before
                <b>
                    <t t-out="format_date((datetime.date.today() + relativedelta(days=+2)), date_format='EEEE, d MMMM y')"/>
                </b>
                (Manila Time),
            </p>
            <p>Your anticipated joining date is
                <b>
                    <t t-out="object.joining_date.strftime('%d-%m-%Y')"/>
                </b>
            </p>
            <p>
                <b>Regards,</b>
                <br/>
                <t t-out="object.env.user.name"/>
                <br/>
                HR Team
                <br/>
                Prime System Solutions
            </p>
        </field>
    </record>
</odoo>
