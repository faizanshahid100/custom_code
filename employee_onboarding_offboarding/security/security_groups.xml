<odoo>
    <!-- Module Category -->
    <record id="onboarding_offboarding_category_id" model="ir.module.category">
        <field name="name">Onboarding/Offboarding</field>
        <field name="description">Helps you manage Employee Onboarding/Offboarding processes.</field>
        <field name="sequence">16</field>
    </record>

    <!-- Groups -->
    <record id="group_onboarding_offboarding_user" model="res.groups">
        <field name="name">Onboarding/Offboarding User</field>
        <field name="category_id" ref="employee_onboarding_offboarding.onboarding_offboarding_category_id"/>
        <field name="users" eval="[Command.link(ref('base.user_root')), Command.link(ref('base.user_admin'))]"/>
    </record>

    <record id="group_onboarding_offboarding_admin" model="res.groups">
        <field name="name">Onboarding/Offboarding Admin</field>
        <field name="category_id" ref="employee_onboarding_offboarding.onboarding_offboarding_category_id"/>
        <field name="implied_ids" eval="[(4, ref('employee_onboarding_offboarding.group_onboarding_offboarding_user'))]"/>
        <field name="users" eval="[Command.link(ref('base.user_root')), Command.link(ref('base.user_admin'))]"/>
    </record>

    <!-- Rule for All Users: See Only Own -->
    <record id="checklist_requests_rule_own" model="ir.rule">
        <field name="name">Checklist Requests - Own Records Only</field>
        <field name="model_id" ref="model_checklist_requests"/>
        <field name="domain_force">[('user_id', '=', user.id)]</field>
        <field name="groups" eval="[(4, ref('base.group_user'))]"/>
    </record>

    <!-- Rule for Admin: Full Access -->
    <record id="checklist_requests_rule_admin" model="ir.rule">
        <field name="name">Checklist Requests - Admin Full Access</field>
        <field name="model_id" ref="model_checklist_requests"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(4, ref('employee_onboarding_offboarding.group_onboarding_offboarding_admin'))]"/>
    </record>
</odoo>
