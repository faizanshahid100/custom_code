<odoo>
    <record id="view_employee_pulse_profile_form" model="ir.ui.view">
        <field name="name">employee.pulse.profile.form</field>
        <field name="model">employee.pulse.profile</field>
        <field name="arch" type="xml">
            <form string="Employee Pulse Profile">
                <sheet>
                    <group>
                        <field name="employee_id" readonly="1"/>
                    </group>
                    <notebook>
                        <page string="Pre-Probation">
                            <field name="pre_probation_meeting_ids">
                                <tree editable="bottom">
                                    <field name="date_meeting"/>
                                    <field name="state"/>
                                    <field name="meeting_status"/>
                                    <field name="reason"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Post-Probation">
                            <field name="post_probation_meeting_ids">
                                <tree editable="bottom">
                                    <field name="date_meeting"/>
                                    <field name="state"/>
                                    <field name="meeting_status"/>
                                    <field name="reason"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_employee_pulse_profile" model="ir.actions.act_window">
        <field name="name">Employee Pulse Profiles</field>
        <field name="res_model">employee.pulse.profile</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
