<odoo>
    <!-- Tree View -->
    <record id="view_employee_pulse_profile_tree" model="ir.ui.view">
        <field name="name">employee.pulse.profile.tree</field>
        <field name="model">employee.pulse.profile</field>
        <field name="arch" type="xml">
            <tree string="Employee Pulse Profiles">
                <field name="employee_id"/>
                <field name="comment"/>
            </tree>
        </field>
    </record>
    <!-- Form View -->
    <record id="view_employee_pulse_profile_form" model="ir.ui.view">
        <field name="name">employee.pulse.profile.form</field>
        <field name="model">employee.pulse.profile</field>
        <field name="arch" type="xml">
            <form string="Employee Pulse Profile">
                <sheet>
                    <group>
                        <group>
                            <field name="employee_id" readonly="1"/>
                        </group>
                        <group>
                            <field name="comment"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="1-3 Months Probation">
                            <field name="_1_3_probation_meeting_ids">
                                <tree editable="bottom">
                                    <field name="date_meeting"/>
                                    <field name="state"/>
                                    <field name="meeting_status"/>
                                    <field name="reason"/>
                                </tree>
                            </field>
                        </page>
                        <page string="3-6 Months Probation">
                            <field name="_3_6_probation_meeting_ids">
                                <tree editable="bottom">
                                    <field name="date_meeting"/>
                                    <field name="state"/>
                                    <field name="meeting_status"/>
                                    <field name="reason"/>
                                </tree>
                            </field>
                        </page>
                        <page string="6 Onward Months Probation">
                            <field name="_6_onwards_probation_meeting_ids">
                                <tree editable="bottom">
                                    <field name="date_meeting"/>
                                    <field name="state"/>
                                    <field name="meeting_status"/>
                                    <field name="reason"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Pre-Probation" invisible="1">
                            <field name="pre_probation_meeting_ids">
                                <tree editable="bottom">
                                    <field name="date_meeting"/>
                                    <field name="state"/>
                                    <field name="meeting_status"/>
                                    <field name="reason"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Post-Probation" invisible="1">
                            <field name="post_probation_meeting_ids">
                                <tree editable="bottom">
                                    <field name="date_meeting"/>
                                    <field name="state"/>
                                    <field name="meeting_status"/>
                                    <field name="reason"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_employee_pulse_profile" model="ir.actions.act_window">
        <field name="name">Employee Pulse Profiles</field>
        <field name="res_model">employee.pulse.profile</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
