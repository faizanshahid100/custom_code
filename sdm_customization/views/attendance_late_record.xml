<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Tree View -->
    <record id="view_employee_late_record_tree" model="ir.ui.view">
        <field name="name">employee.late.record.tree</field>
        <field name="model">attendance.late.record</field>
        <field name="arch" type="xml">
            <tree string="Employee Late Records" default_order="date desc" editable="bottom">
                <field name="date" readonly="1"/>
                <field name="employee_id" readonly="1"/>
                <field name="minutes_overdue" readonly="1"/>
                <field name="is_connect_sdm" widget="boolean_toggle" readonly="1"/>
                <field name="remarks"/>
            </tree>
        </field>
    </record>

    <!-- Action -->
    <record id="action_employee_late_record" model="ir.actions.act_window">
        <field name="name">Employee Late Records</field>
        <field name="res_model">attendance.late.record</field>
        <field name="view_mode">tree</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No late records found!
            </p>
        </field>
    </record>

</odoo>
