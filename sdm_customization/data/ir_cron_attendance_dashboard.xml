<odoo>
    <record id="ir_cron_attendance_dashboard" model="ir.cron">
        <field name="name">Attendance: Missing Check-in Dashboard Refresh</field>
        <field name="model_id" ref="model_attendance_dashboard"/>
        <field name="state">code</field>
        <field name="code">model.refresh()</field>
        <field name="interval_number">5</field>
        <field name="interval_type">minutes</field>
        <field name="numbercall">-1</field>
        <field name="active" eval="True"/>
    </record>
    <record id="ir_cron_send_weekly_late_summary" model="ir.cron">
        <field name="name">Send Weekly Late Summary</field>
        <field name="model_id" ref="model_attendance_late_record"/>
        <field name="state">code</field>
        <field name="code">model.send_weekly_summary_email()</field>
        <field name="interval_number">7</field>
        <field name="interval_type">days</field>
        <field name="numbercall">-1</field>
    </record>
</odoo>
