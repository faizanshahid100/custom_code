<odoo>
    <record id="dashboard_view_action" model="ir.actions.client">
        <field name="name">Dashboard</field>
        <field name="tag">OdooDynamicDashboardAsset</field>
    </record>

    <record id="action_vendor_only_partners" model="ir.actions.act_window">
        <field name="name">Vendors</field>
        <field name="res_model">res.partner</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_vendor': 1}</field>
