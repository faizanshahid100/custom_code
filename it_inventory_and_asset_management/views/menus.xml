    <menuitem id="menu_it_inventory_and_asset_management_root" name="IT Asset Management" sequence="1" groups="it_inventory_and_asset_management.group_it_asset_user"/>
        <menuitem id="menu_dashboard" name="Dashboard" parent="menu_it_inventory_and_asset_management_root" action="dashboard_view_action" sequence="0"/>
        <menuitem id="menu_it_components" name="Components" parent="menu_it_inventory_and_asset_management_root" action="action_it_components" sequence="3"/>
        <menuitem id="menu_system_system" name="Systems" parent="menu_it_inventory_and_asset_management_root" action="action_system_system" sequence="1"/>
        <menuitem id="menu_it_assets" name="Assets" parent="menu_it_inventory_and_asset_management_root" action="action_it_assets" sequence="2"/>
        <menuitem id="menu_configuration" name="Configuration" parent="menu_it_inventory_and_asset_management_root" sequence="4"/>
            <menuitem id="menu_asset_model" name="Asset Model" parent="menu_configuration" action="action_asset_model"/>
            <menuitem id="menu_asset_type_main" name="Asset Types" parent="menu_configuration" action="action_asset_type"/>
            <menuitem id="menu_asset_brand_main" name="Asset Brands" parent="menu_configuration" action="action_asset_brand"/>
            <menuitem id="dashboard_block_menu" name="Dashboard Blocks" parent="menu_configuration" action="dashboard_block_action" sequence="5" groups="base.group_system"/>
