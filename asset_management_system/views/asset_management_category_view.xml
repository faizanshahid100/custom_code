<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- ===================================================== -->
    <!--  Tree View                                             -->
    <!-- ===================================================== -->
    <record id="view_asset_management_category_tree" model="ir.ui.view">
        <field name="name">asset.management.category.tree</field>
        <field name="model">asset.management.category</field>
        <field name="arch" type="xml">
            <tree string="IT Asset Categories">
                <field name="name"/>
                <field name="code"/>
                <field name="description"/>
            </tree>
        </field>
    </record>

    <!-- ===================================================== -->
    <!--  Form View                                             -->
    <!-- ===================================================== -->
    <record id="view_asset_management_category_form" model="ir.ui.view">
        <field name="name">asset.management.category.form</field>
        <field name="model">asset.management.category</field>
        <field name="arch" type="xml">
            <form string="IT Asset Category">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="description"/>
                        </group>
                        <group>
                            <field name="code"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- ===================================================== -->
    <!--  Search View                                           -->
    <!-- ===================================================== -->
    <record id="view_asset_management_category_search" model="ir.ui.view">
        <field name="name">asset.management.category.search</field>
        <field name="model">asset.management.category</field>
        <field name="arch" type="xml">
            <search string="Search Categories">
                <field name="name"/>
                <field name="code"/>
                <filter string="With Code" name="with_code" domain="[('code', '!=', False)]"/>
            </search>
        </field>
    </record>

    <!-- ===================================================== -->
    <!--  Action: Open IT Asset Categories                     -->
    <!-- ===================================================== -->
    <record id="action_asset_management_category" model="ir.actions.act_window">
        <field name="name">IT Asset Categories</field>
        <field name="res_model">asset.management.category</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first IT Asset Category
            </p>
        </field>
    </record>
</odoo>
