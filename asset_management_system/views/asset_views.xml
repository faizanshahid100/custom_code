<odoo>
    <record id="view_asset_management_asset_tree" model="ir.ui.view">
        <field name="name">asset.management.asset.tree</field>
        <field name="model">asset.management.asset</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="serial_no"/>
                <field name="model_name"/>
                <field name="processor"/>
                <field name="ram"/>
                <field name="storage"/>
                <field name="condition_rating"/>
                <field name="is_allotted"/>
            </tree>
        </field>
    </record>

    <record id="view_asset_management_asset_form" model="ir.ui.view">
        <field name="name">asset.management.asset.form</field>
        <field name="model">asset.management.asset</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_set_in_store" type="object" string="In Store" class="oe_highlight"
                            states="in_repair,scraped"/>
                    <button name="action_set_in_repair" type="object" string="In Repair" class="oe_highlight"
                            states="in_store"/>
                    <button name="action_set_scraped" type="object" string="Scraped" class="oe_highlight"
                            states="in_store"/>
                    <field name="state" widget="statusbar" statusbar_visible="in_store,in_running,in_repair,scraped"/>
                </header>
                <sheet>
                    <h2>
                        <field name="sequence_no"/>
                    </h2>
                    <group>
                        <group>
                            <field name="name" attrs="{'readonly': [('state', '=', 'in_running')]}"/>
                            <field name="asset_category_id" required="1"
                                   attrs="{'readonly': [('state', '=', 'in_running')]}"/>
                            <field name="serial_no" attrs="{'readonly': [('state', '=', 'in_running')]}"/>
                            <field name="model_name" attrs="{'readonly': [('state', '=', 'in_running')]}"/>
                            <field name="processor" attrs="{'readonly': [('state', '=', 'in_running')]}"/>
                            <field name="assigned_id" readonly="1"/>
                            <field name="is_allotted" readonly="1" invisible="1"/>
                            <field name="is_in_repair" readonly="1" invisible="1"/>
                            <field name="is_in_scrap" readonly="1" invisible="1"/>
                        </group>
                        <group>
                            <field name="purchase_date" attrs="{'readonly': [('state', '=', 'in_running')]}"/>
                            <field name="purchase_price" attrs="{'readonly': [('state', '=', 'in_running')]}"/>
                            <field name="ram" attrs="{'readonly': [('state', '=', 'in_running')]}"/>
                            <field name="storage" attrs="{'readonly': [('state', '=', 'in_running')]}"/>
                            <field name="condition_rating" attrs="{'readonly': [('state', '=', 'in_running')]}"/>
                            <field name="reason_below_8" attrs="{'invisible': [('condition_rating', '>=', 8)]}"/>
                            <field name="comments"/>
                        </group>
                    </group>
<!--                    <notebook>-->
<!--                        <page string="Usage History">-->
<!--                            <field name="asset_history_line_ids" readonly="0">-->
<!--                                <tree editable="bottom">-->
<!--                                    <field name="employee_id"/>-->
<!--                                    <field name="assign_date"/>-->
<!--                                    <field name="return_date"/>-->
<!--                                    <field name="assigned_by_id"/>-->
<!--                                    <field name="return_by_id"/>-->
<!--                                    <field name="assignment_id"/>-->
<!--                                    <field name="asset_id" invisible="1"/>-->
<!--                                </tree>-->
<!--                            </field>-->
<!--                        </page>-->
<!--                    </notebook>-->
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" groups="base.group_user"
                           options="{'post_refresh': 'recipients'}"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>
    <record id="action_asset_management_asset" model="ir.actions.act_window">
        <field name="name">Assets</field>
        <field name="res_model">asset.management.asset</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
