<odoo>
    <record id="view_asset_management_asset_tree" model="ir.ui.view">
        <field name="name">asset.management.asset.tree</field>
        <field name="model">asset.management.asset</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="serial_no"/>
                <field name="model_name"/>
                <field name="processor"/>
                <field name="ram"/>
                <field name="storage"/>
                <field name="condition_rating"/>
                <field name="is_allotted"/>
            </tree>
        </field>
    </record>

    <record id="view_asset_management_asset_form" model="ir.ui.view">
        <field name="name">asset.management.asset.form</field>
        <field name="model">asset.management.asset</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_set_in_store" type="object" string="In Store" class="oe_highlight"
                            states="in_repair,scraped"/>
                    <button name="action_set_in_repair" type="object" string="In Repair" class="oe_highlight" states="in_store"/>
                    <button name="action_set_scraped" type="object" string="Scraped" class="oe_highlight"
                            states="in_store"/>
                    <field name="state" widget="statusbar" statusbar_visible="in_store,in_running,in_repair,scraped"/>
                </header>
                <sheet>
                    <field name="sequence_no" readonly="1"/>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="serial_no"/>
                            <field name="model_name"/>
                            <field name="processor"/>
                            <field name="is_allotted" readonly="1"/>
                            <field name="assigned_id" readonly="1"/>
                            <field name="is_in_repair" readonly="1"/>
                            <field name="is_in_scrap" readonly="1"/>
                        </group>
                        <group>
                            <field name="ram"/>
                            <field name="storage"/>
                            <field name="condition_rating"/>
                            <field name="reason_below_8" attrs="{'invisible': [('condition_rating', '>=', 8)]}"/>
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" groups="base.group_user"
                           options="{'post_refresh': 'recipients'}"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>
    <record id="action_asset_management_asset" model="ir.actions.act_window">
        <field name="name">Assets</field>
        <field name="res_model">asset.management.asset</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
