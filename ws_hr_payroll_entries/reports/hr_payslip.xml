<odoo>
    <template id="report_payslip_document">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="web.external_layout">
                    <div style="font-family: Arial, sans-serif; font-size: 14px; border: double; padding: 10px; width: 800px; margin: auto;">
                        <!-- Header -->
                        <div style="text-align: center;">
                            <!--                            <img t-if="docs.company_id.logo" style="width: 64px; height: 64px; object-fit: cover;" t-attf-src="data:image/png;base64,{{docs.company_id.logo}}" alt="Logo"/>-->
                            <h2 style="border: 1px solid black; margin-top: 15px; padding: 5px; text-transform: uppercase;">
                                Prime System Solutions FZ - LLC
                            </h2>
                        </div>

                        <!-- Payslip Info -->
                        <div style="margin-top: 20px;">
                            <div style="float: left; width: 50%;">
                                <p>
                                    <strong>PAYMENT SLIP FOR THE MONTH OF:</strong>
                                    <u>
                                        <t t-esc="o.date_from.strftime('%B %Y')"/>
                                    </u>
                                </p>
                                <p>
                                    <strong>CONTRACTOR NAME:</strong>
                                    <u>
                                        <t t-esc="o.employee_id.name"/>
                                    </u>
                                </p>
                                <p>
                                    <strong>CNIC:</strong>
                                    <u>
                                        <t t-esc="o.employee_id.identification_id"/>
                                    </u>
                                </p>
                                <p>
                                    <strong>DESIGNATION:</strong>
                                    <u>
                                        <t t-esc="o.employee_id.job_id.name"/>
                                    </u>
                                </p>
                                <p>
                                    <strong>DAYS PAID FOR:</strong>
                                    ____________________________
                                </p>
                                <p>
                                    <strong>COUNTRY:</strong>
                                    <u>
                                        <t t-esc="o.employee_id.country_id.name"/>
                                    </u>
                                </p>
                            </div>
                        </div>

                        <!-- Payment Table -->
                        <div style="clear: both; margin-top: 20px; border: 1px solid black; padding: 10px;">
                            <div class="row">
                                <div class="col-2" style="margin-left:10px;">
                                    <strong>TOTAL PAYMENT</strong>
                                </div>
                                <div class="col-8"></div>
                                <div class="col-2" style="text-align: center;">
                                    <strong>USD</strong>
                                </div>
                            </div>
                            <table style="width: 100%; border-collapse: collapse;">
                                <tr>
                                    <div class="row">
                                        <div class="col-10" style="border:1px solid black;padding:5px;">
                                            <strong>Basic Payment</strong>
                                        </div>
                                        <div class="col-2" style="border:1px solid black;padding:5px;text-align:center;">
                                            <strong>USD</strong>
                                        </div>
                                    </div>
                                </tr>
                                 <tr>
                                    <div class="row">
                                        <div class="col-10" style="border:1px solid black;padding:5px;">
                                            <strong style="text-align: left;">Medical Allowance</strong>
                                        </div>
                                        <div class="col-2" style="border:1px solid black;padding:5px;text-align:center;">
                                            <strong>USD</strong>
                                        </div>
                                    </div>
                                </tr>
                                <tr>
                                    <div class="row">
                                        <div class="col-10" style="border:1px solid black;padding:5px;">
                                            <strong>Bonus / Arrear</strong>
                                        </div>
                                        <div class="col-2" style="border:1px solid black;padding:5px;text-align:center;">
                                            <strong>USD</strong>
                                        </div>
                                    </div>
                                </tr>
                                <tr>
                                    <div class="row">
                                        <div class="col-10" style="border:1px solid black;padding:5px;">
                                            <strong>Increment Arrear</strong>
                                        </div>
                                        <div class="col-2" style="border:1px solid black;padding:5px;text-align:center;">
                                            <strong>USD</strong>
                                        </div>
                                    </div>
                                </tr>
                                <tr>
                                    <div class="row">
                                        <div class="col-10" style="border:1px solid black;padding:5px;">
                                            <strong>Iftar Allowance</strong>
                                        </div>
                                        <div class="col-2" style="border:1px solid black;padding:5px;text-align:center;">
                                            <strong>USD</strong>
                                        </div>
                                    </div>
                                </tr>
                                <tr>
                                    <div class="row">
                                        <div class="col-10" style="border:1px solid black;padding:5px;">
                                            <strong>Expenses reimbursments</strong>
                                        </div>
                                        <div class="col-2" style="border:1px solid black;padding:5px;text-align:center;">
                                            <strong>USD</strong>
                                        </div>
                                    </div>
                                </tr>
                                <tr>
                                    <div class="row">
                                        <div class="col-10" style="border:1px solid black;padding:5px;">
                                            <strong>0.25% WHT</strong>
                                        </div>
                                        <div class="col-2" style="border:1px solid black;padding:5px;text-align:center;">
                                            <strong>USD</strong>
                                        </div>
                                    </div>
                                </tr>
                                <tr>
                                    <div class="row">
                                        <div class="col-10" style="border:1px solid black;padding:5px;">
                                            <strong>Bank Charges</strong>
                                        </div>
                                        <div class="col-2" style="border:1px solid black;padding:5px;text-align:center;">
                                            <strong>USD</strong>
                                        </div>
                                    </div>
                                </tr>
                                <tr>
                                    <div class="row">
                                        <div class="col-10" style="border:1px solid black;padding:5px;">
                                            <strong>Overtime</strong>
                                        </div>
                                        <div class="col-2" style="border:1px solid black;padding:5px;text-align:center;">
                                            <strong>USD</strong>
                                        </div>
                                    </div>
                                </tr>
                            </table>
                            <br/>
                            <div class="row">
                                <div class="col-2" style="margin-left:10px;">
                                    <strong>TOTAL PAYMENT</strong>
                                </div>
                                <div class="col-8"></div>
                                <div class="col-2" style="text-align: center;">
                                    <strong>USD</strong>
                                </div>
                            </div>
                        </div>

                        <!-- Deductions Table -->
                        <div style="margin-top: 20px; border: 1px solid black; padding: 10px;">
                            <table style="width: 100%; border-collapse: collapse;">
                                <tr>
                                    <td style="width: 70%; vertical-align: top;">
                                        <strong>DEDUCTIONS</strong>
                                        <br/>
                                        Income Tax
                                        <br/>
                                        Loan and Advances
                                        <br/>
                                        Others
                                        <br/>
                                        Mobile Deduction
                                        <br/>
                                        -------------------------------
                                        <br/>
                                        <strong>TOTAL DEDUCTIONS FOR THE MONTH</strong>
                                    </td>
                                    <td style="width: 30%; text-align: right; vertical-align: top;">
                                        <strong>USD</strong>
                                        <br/>
                                        <br/>
                                        <br/>
                                        <br/>
                                        <br/>
                                        <strong>____</strong>
                                    </td>
                                </tr>
                            </table>
                        </div>

                        <!-- Net Payment -->
                        <p style="margin-top: 20px;">
                            <strong>NET PAYMENT TRANSFERRED FOR THE MONTH (USD):</strong>
                            ____________________
                        </p>

                        <!-- Note -->
                        <div style="margin-top: 30px; font-size: 13px;">
                            <p>
                                <strong>Note:</strong>
                            </p>
                            <p style="color: red;">
                                Payment slip is a confidential document and is for your information and record. It is
                                hereby advised that payment slip should not be presented to any authority without prior
                                intimation.
                            </p>
                            <p>
                                <em>This is a computer generated document and does not require signatures.</em>
                            </p>
                        </div>
                    </div>

                </t>
            </t>
        </t>
    </template>

    <record id="action_report_payslip_custom" model="ir.actions.report">
        <field name="name">Payslip PDF</field>
        <field name="model">hr.payslip</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">ws_hr_payroll_entries.report_payslip_document</field>
        <field name="report_file">ws_hr_payroll_entries.report_payslip_document</field>
        <field name="binding_model_id" ref="hr_payroll.model_hr_payslip"/>
        <field name="binding_type">report</field>
    </record>
</odoo>
